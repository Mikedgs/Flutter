@using Flutter.Models;
@model LoginViewModel

@{
    ViewBag.Title = "Home Page";
}
<h2>Sign In</h2>
@if (!@Model.IsValidUser)
{
    <p>Invalid password</p>
}
<div class="form-class">
    @using (Html.BeginForm("Login", "Login"))
    {
        @Html.LabelFor(x => x.User.UserName) @Html.TextBoxFor(x => x.User.UserName) <br />
        @Html.LabelFor(x => x.User.Password) @Html.PasswordFor(x => x.User.Password) <br />
        <input class="button" type="submit" value="Login" />
    }
</div>
<br />
<br />
<a href="/User/CreateUser">Create new account</a>