@using Flutter.Models
@using SharpTwit
@using System

@model Tweet
           
<h2>Retweet: @ViewBag.originaltweetmessage</h2>

<div class="form-class">
    @using (Html.BeginForm("ReTweet", "Tweet"))
    {
        @Html.HiddenFor(x => x.UserId)
        @Html.HiddenFor(x => x.OriginalTweetId)
        @Html.Label("Tweet: ") @Html.TextBoxFor(x => x.TweetField)
        <br />
        <input type="submit" value="Retweet" />
    }
</div>
<br />
<a href="/User/Index">Return to user page</a>
