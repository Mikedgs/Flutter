@using Flutter.Models
@model UserViewModel

@{
    ViewBag.Title = "Index";
}

<div id="gravitar-profile">@Html.GravatarImage(@Model.UserObject.Email)</div>
<div id="gravitar-edit"><a href="http://en.gravatar.com/">Edit my gravitar</a></div>
<h2>@Model.UserObject.UserName.ToUpper()'s Page</h2>

<p>Username: @Model.UserObject.UserName</p>
<p>Email: @Model.UserObject.Email</p>

<ul>@foreach(var tweet in @Model.TweetList)
    {
        <li>@tweet.TweetField</li>
    }   
</ul>

<a class="button" href="/Tweet/Index">Create a new Flut</a>
<br />
<h2>Followers</h2>
<ul>
    @foreach(var user in @Model.PeopleWhoFollowMe)
    {
        <li><a href="/User/Profile?@user.Id">@user.UserName</a></li>
    }
</ul>

<h2>People I am following</h2>
<ul>
    @foreach (var user in @Model.UserObject.FollowTablesByFollower)
    {
        <li><a href="/User/Profile?@user.User.Id">@user.User.UserName</a></li>
    }
</ul>

